<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsLibrary.View.DetailsView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackLayout Grid.Row="0">
      <StackLayout Orientation="Horizontal">
        <Label x:Name="TitleLabel" VerticalOptions="Center" HorizontalOptions="Center" />
      </StackLayout>

      <StackLayout Orientation="Horizontal">
        <Label Text="Adresse" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label x:Name="AddressLabel" VerticalOptions="Center" HorizontalOptions="Center" />
      </StackLayout>

      <StackLayout Orientation="Horizontal">
        <Label Text="Date de début :" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label x:Name="StartDateLabel" VerticalOptions="Center" HorizontalOptions="Center" />
      </StackLayout>

      <StackLayout Orientation="Horizontal">
        <Label Text="Date de fin :" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label x:Name="EndDateLabel" VerticalOptions="Center" HorizontalOptions="Center" />
      </StackLayout>     
    </StackLayout>

    <WebView Grid.Row="1" x:Name="webView" BackgroundColor="Black"/>
  </Grid>
  
</ContentPage>