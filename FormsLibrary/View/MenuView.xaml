<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FormsLibrary.ViewModel;assembly=FormsLibrary"
             x:Class="FormsLibrary.View.MenuView">

  <ContentPage.BindingContext>
    <local:MenuViewModel />
  </ContentPage.BindingContext>
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Button Grid.Row="0" Grid.Column="0" Text="Activité locale" Clicked="ButtonClicked1"/>

    <Button Grid.Row="0" Grid.Column="1" Text="Itinéraire" Clicked="ButtonClicked3"/>

    <Button Grid.Row="1" Grid.Column="0" Text="Agenda" Clicked="ButtonClicked2"/>

    <Button Grid.Row="1" Grid.Column="1" Text="Météo" Clicked="ButtonClicked4"/>

    <Button Grid.Row="2" Grid.Column="0" Text="Blog" Clicked="ButtonClicked5"/>

    <Button Grid.Row="2" Grid.Column="1" Text="Aller vers le site" Clicked="ButtonClicked6"/>    

  </Grid>
</ContentPage>